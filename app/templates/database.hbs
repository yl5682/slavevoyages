<div class="sub-menu col-md-12">
  <h1 class="banner-title">Databases > Slave Voyages</h1>
  <div class="search-bar">

    {{#menu-aim}}
    <div class="dropdown padding-left-none">
      <span class="dropdown-toggle search-menu" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        1855 - 1875
        <span class="caret"></span>
      </span>
      <ul class="dropdown-menu" role="menu" aria-labelledby="time-range">
        <li><a href="#">Date Time</a></li>
      </ul>
    </div>
    {{/menu-aim}}


    {{#menu-aim}}
    <div class="dropdown">
      <span class="dropdown-toggle search-menu" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Ship, nation, owner {{#unless resetBtnEnabled}}({{count}}){{/unless}}
        <span class="caret"></span>
      </span>
      <ul class="dropdown-menu" role="menu" aria-labelledby="nation-ship-owners">
        <li data-submenu-id="submenu-vin">
          <a href="#">Voyage identification number </a>

          <div id="submenu-vin" class="menu-canvas">
              <h3 class="menu-canvas-title">Voyage identification number</h3>
              <div class="menu-canvas-content">
                <div class="menu-item-description">Voyage identification number is also known as VoyageIDs. They are used to represent and
                reference each unique voyage in the database.</div>
              </div>
          </div>
        </li>

        <li data-submenu-id="submenu-v-cdrom">
          <a href="#">Voyage in 1999 CD-ROM {{#unless resetBtnEnabled}}<span class="badge">{{count}}</span>{{/unless}}</a>
